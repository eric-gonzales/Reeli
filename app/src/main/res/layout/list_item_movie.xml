<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/movie_list_thumbnail"
        android:layout_width="@dimen/movielist_movie_poster_width"
        android:layout_height="@dimen/movielist_movie_poster_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        tools:src="@drawable/not_found"
        android:contentDescription="@string/thumbnail"
        />
    <RelativeLayout
        android:id="@+id/movie_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/movie_list_thumbnail"
        android:layout_toRightOf="@id/movie_list_thumbnail">
        <TextView
            android:id="@+id/movie_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/movielist_movie_title"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Title"
            />
        <TextView
        android:id="@+id/movie_list_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/movie_list_title"
        android:textSize="@dimen/movielist_movie_description"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Information"
        />
        <TextView
            android:id="@+id/movie_list_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_list_info"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="@dimen/movielist_movie_description"
            tools:text="Overview"
            />
    </RelativeLayout>
</RelativeLayout>
